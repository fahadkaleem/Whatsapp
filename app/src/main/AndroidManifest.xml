    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/app_name"
      android:name=".ui.mainscreen.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.profilescreen.ProfileActivity"
      android:theme="@style/AppTheme.StatusBarTransparent">
    </activity>
    <activity android:name=".ui.chatscreen.ChatActivity">
    </activity>
    <activity android:name=".ui.welcomescreen.WelcomeActivity">
    </activity>
    <activity android:name=".ui.verifyscreen.VerifyPhoneNumberActivity">
    </activity>
    <activity android:name=".ui.contactslistscreen.ContactsListActivity">
    </activity>
    <activity android:name=".ui.settingscreen.SettingsActivity">
    </activity>
    <activity android:name=".accountsettingsscreen.AccountSettingsActivity">
    </activity>
  </application>

</manifest>